<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_store">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="822dp">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="311dp"
                    android:layout_height="58dp"
                    android:layout_margin="@dimen/add_button_margin"
                    android:layout_marginStart="@dimen/add_button_marginStart"
                    android:layout_marginTop="@dimen/add_button_marginTop"
                    android:layout_marginEnd="@dimen/add_button_marginEnd"
                    android:background="@drawable/blackground_button"
                    android:text="@string/add"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="192dp"
                    android:layout_height="318dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/top_background"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toStartOf="@+id/linearLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button2">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="158dp"
                            android:layout_height="165dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="13dp"
                            android:layout_marginEnd="19dp"
                            android:layout_weight="1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/hand1" />

                        <Button
                            android:id="@+id/button3"
                            android:layout_width="90dp"
                            android:layout_height="46dp"
                            android:layout_marginStart="@dimen/delete_button_marginStart"
                            android:layout_marginTop="@dimen/delete_button_marginTop"
                            android:layout_marginEnd="@dimen/delete_button_marginEnd"
                            android:layout_marginBottom="@dimen/delete_button_marginBottom"
                            android:background="@drawable/grey_blackground"
                            android:text="@string/delet"
                            app:layout_constraintBottom_toTopOf="@+id/button5"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

                        <Button
                            android:id="@+id/button5"
                            android:layout_width="90dp"
                            android:layout_height="46dp"
                            android:layout_marginStart="@dimen/edit_button_marginStart"
                            android:layout_marginTop="@dimen/edit_button_marginTop"
                            android:layout_marginEnd="@dimen/edit_button_marginEnd"
                            android:layout_marginBottom="@dimen/edit_button_marginBottom"
                            android:background="@drawable/grey_blackground"
                            android:text="@string/edit"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/button3" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="197dp"
                    android:layout_height="319dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="37dp"
                    android:layout_weight="1"
                    android:background="@drawable/top_background"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/linearLayout3"
                    app:layout_constraintTop_toBottomOf="@+id/button2">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="186dp"
                            android:layout_height="139dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="14dp"
                            android:layout_marginBottom="9dp"
                            app:layout_constraintBottom_toTopOf="@+id/button6"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/hand3" />

                        <Button
                            android:id="@+id/button6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="52dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="57dp"
                            android:layout_marginBottom="11dp"
                            android:background="@drawable/grey_blackground"
                            android:text="@string/delet"
                            app:layout_constraintBottom_toTopOf="@+id/button7"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/imageView5" />

                        <Button
                            android:id="@+id/button7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="52dp"
                            android:layout_marginTop="11dp"
                            android:layout_marginEnd="57dp"
                            android:layout_marginBottom="26dp"
                            android:background="@drawable/grey_blackground"
                            android:text="@string/edit"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/button6" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="193dp"
                    android:layout_height="339dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginEnd="1dp"
                    android:background="@drawable/top_background"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="341dp">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="160dp"
                            android:layout_height="165dp"
                            android:layout_marginStart="7dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="3dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.434"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/hand4" />

                        <Button
                            android:id="@+id/button8"
                            android:layout_width="90dp"
                            android:layout_height="46dp"
                            android:layout_marginStart="51dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="52dp"
                            android:layout_marginBottom="14dp"
                            android:background="@drawable/grey_blackground"
                            android:text="@string/delet"
                            app:layout_constraintBottom_toTopOf="@+id/button9"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/imageView5" />

                        <Button
                            android:id="@+id/button9"
                            android:layout_width="90dp"
                            android:layout_height="46dp"
                            android:layout_marginStart="51dp"
                            android:layout_marginTop="14dp"
                            android:layout_marginEnd="52dp"
                            android:layout_marginBottom="30dp"
                            android:background="@drawable/grey_blackground"
                            android:text="@string/edit"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/button8" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="200dp"
                    android:layout_height="333dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/top_background"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/linearLayout4"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="173dp"
                            android:layout_height="185dp"
                            android:layout_marginStart="9dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="9dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.555"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/hand5" />

                        <Button
                            android:id="@+id/button10"
                            android:layout_width="90dp"
                            android:layout_height="46dp"
                            android:layout_marginStart="56dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="54dp"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/grey_blackground"
                            android:text="@string/delet"
                            app:layout_constraintBottom_toTopOf="@+id/button11"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/imageView5" />

                        <Button
                            android:id="@+id/button11"
                            android:layout_width="90dp"
                            android:layout_height="46dp"
                            android:layout_marginStart="55dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="54dp"
                            android:layout_marginBottom="22dp"
                            android:background="@drawable/grey_blackground"
                            android:text="@string/edit"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/button10" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>